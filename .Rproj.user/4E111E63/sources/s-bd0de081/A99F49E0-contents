install.packages(c("credentials", "blogdown", "distill"))
install.packages("usethis")

## setting: permanent storage
credentials::credential_helper_set("store")                   # Linux

## create a personal access token for authentication:
usethis::create_github_token() 
## in case usethis version < 2.0.0: usethis::browse_github_token() (or even better: update usethis!)

## copy and paste your token and press enter
credentials::set_github_pat()

usethis::use_git_config(user.name = "Jinseob Kim", user.email = "jinseob2kim@gmail.com")


library(distill)


create_blog(dir = ".", title = "SKKU biohrs")
#create_website(dir = ".", title = "SKKU biohrs")

create_post("kakakka")

distill::publish_website()

